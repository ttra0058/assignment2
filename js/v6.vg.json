{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "background": null
      },
    "vconcat": [
        {
            "width": 1200,
            "height": 600,
            "projection": {
                "type": "equalEarth"
            },
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "stroke": "white"
                    },
                    "encoding": {
                        "tooltip": [
                            {
                                "field": "properties.NAME",
                                "type": "nominal",
                                "title": "Country"
                            }
                        ]
                    }
                },
                {
                    "data": {
                        "url": "data/air_reshaped.csv"
                    },
                    "transform": [
                        {
                            "lookup": "Country Code",
                            "from": {
                                "data": {
                                    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                                    "format": {
                                        "type": "topojson",
                                        "feature": "ne_110m_admin_0_countries"
                                    }
                                },
                                "key": "properties.GU_A3"
                            },
                            "as": "geo"
                        },
                        {
                            "filter": "datum.Year == index.Year"
                        },
                        {
                            "filter": "datum['geo'] != null"
                        },
                        {
                            "filter": "datum['CO2 emissions (metric tons per capita)'] != 0"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "stroke": "white"
                    },
                    "encoding": {
                        "shape": {
                            "field": "geo",
                            "type": "geojson"
                        },
                        "color": {
                            "field": "CO2 emissions (metric tons per capita)",
                            "type": "quantitative",
                            "scale": {
                                "type": "linear",
                                "domain": [
                                    0,
                                    40
                                ],
                                "scheme": {
                                    "name": "redyellowgreen",
                                    "extent": [
                                        0.6,
                                        0
                                    ]
                                }
                            },
                            "legend": {
                                "title": "Metric Tons"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Country Name",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "CO2 emissions (metric tons per capita)",
                                "type": "quantitative"
                            },
                            {
                                "field": "Year",
                                "type": "temporal",
                                "format": "%Y"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": 1200,
            "height": 200,
            "title": "Use this line chart to filter out the data based on time",
            "data": {
                "url": "data/air_reshaped.csv"
            },
            "transform": [
                {
                    "filter": "datum['Country Name'] == 'World'"
                },
                {
                    "filter": {
                        "and": [
                            {
                                "field": "Year",
                                "gte": {
                                    "year": 1960
                                }
                            },
                            {
                                "field": "Year",
                                "lte": {
                                    "year": 2019
                                }
                            }
                        ]
                    }
                }
            ],
            "layer": [
                {
                    "params": [
                        {
                            "name": "index",
                            "value": 2005,
                            "select": {
                                "type": "point",
                                "encodings": [
                                    "x"
                                ],
                                "on": {
                                    "merge": [
                                        {
                                            "type": "mousedown"
                                        },
                                        {
                                            "type": "mousemove"
                                        },
                                        {
                                            "type": "mouseup"
                                        }
                                    ]
                                },
                                "nearest": true
                            }
                        }
                    ],
                    "mark": "point",
                    "encoding": {
                        "x": {
                            "field": "Year",
                            "type": "temporal",
                            "axis": {
                                "title": "",
                                "format": "%Y"
                            }
                        },
                        "opacity": {
                            "value": 0
                        }
                    }
                },
                {
                    "layer": [
                        {
                            "mark": {
                                "stroke": "#85c58e",
                                "type": "line",
                                "interpolate": "monotone"
                            },
                            "encoding": {
                                "x": {
                                    "field": "Year",
                                    "type": "temporal",
                                    "axis": {
                                        "title": "",
                                        "format": "%Y"
                                    }
                                },
                                "y": {
                                    "field": "CO2 emissions (metric tons per capita)",
                                    "type": "quantitative",
                                    "axis": {
                                        "title": "Metric Tons (Worldwide)",
                                        "titleColor": "#85c58e"
                                    }
                                }
                            }
                        },
                        {
                            "mark": {
                                "stroke": "#85A9C5",
                                "type": "line",
                                "interpolate": "monotone"
                            },
                            "encoding": {
                                "x": {
                                    "field": "Year",
                                    "type": "temporal",
                                    "axis": {
                                        "title": "",
                                        "format": "%Y"
                                    }
                                },
                                "y": {
                                    "field": "Population total",
                                    "type": "quantitative",
                                    "axis": {
                                        "title": "World Population",
                                        "titleColor": "#85A9C5",
                                        "format": ""
                                    }
                                }
                            }
                        }
                    ],
                    "resolve": {
                        "scale": {
                            "y": "independent"
                        }
                    }
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "index"
                            }
                        }
                    ],
                    "encoding": {
                        "x": {
                            "field": "Year",
                            "type": "temporal",
                            "axis": {
                                "title": "",
                                "format": "%Y"
                            }
                        },
                        "color": {
                            "value": "firebrick"
                        }
                    },
                    "layer": [
                        {
                            "mark": {
                                "type": "rule",
                                "strokeWidth": 0.5
                            }
                        },
                        {
                            "mark": {
                                "type": "text",
                                "align": "center",
                                "fontWeight": 100
                            },
                            "encoding": {
                                "text": {
                                    "field": "Year",
                                    "timeUnit": "year"
                                },
                                "y": {
                                    "value": 310
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}